{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A radial chart showing the population of countries with alternating colors and a control to select the year.",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/jhuy0014/DataVis2Draft/refs/heads/main/data/TopCountriesBirth.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": {
        "input": "select",
        "options": [2010, 2015, 2020],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == Year"
    },
    {
      "window": [
        {"op": "rank", "as": "rank"}
      ],
      "sort": [{"field": "Population", "order": "descending"}]
    }
  ],
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},
      "encoding": {
        "color": {
          "condition": {
            "test": "datum.rank % 2 == 0",
            "value": "lightskyblue"
          },
          "value": "#ef8a62"
        },
        "tooltip": [
          {"field": "Country", "title": "Country of Birth"},
          {"field": "Population", "title": "Population"}
        ]
      }
    },
    {
      "mark": {"type": "text", "radiusOffset": 40},
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "tooltip": [
          {"field": "Country", "title": "Country of Birth"},
          {"field": "Population", "title": "Population"}
        ]
      }
    }
  ],
  "encoding": {
    "theta": {"field": "Population", "type": "quantitative", "stack": true},
    "radius": {
      "field": "Population",
      "scale": {"type": "linear", "zero": false, "rangeMin": 20}
    }
  },
  "config": {}
}
