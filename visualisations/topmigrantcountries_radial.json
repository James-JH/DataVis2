{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A radial chart with the option to highlight either the top 3 or bottom 3 countries by population as well as control the year.",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jhuy0014/DataVis2Draft/refs/heads/main/data/TopCountriesBirth.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": {
        "input": "select",
        "options": [2010, 2015, 2020],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year"},
    {
      "window": [{"op": "rank", "as": "rank"}]
    }
  ],
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},
      "encoding": {
        "tooltip": [
          {"field": "Country", "title": "Country of Birth"},
          {"field": "Population", "title": "Population"}
        ]
      }
    },
    {
      "mark": {"type": "text", "radiusOffset": 35},
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "tooltip": [
          {"field": "Country", "title": "Country of Birth"},
          {"field": "Population", "title": "Population"}
        ]
      }
    }
  ],
  "encoding": {
    "theta": {"field": "Country", "type": "nominal", "stack": true},
    "radius": {
      "field": "Population",
      "scale": {"type": "sqrt", "zero": false, "rangeMin": 20}
    },
    "color": {
      "field": "Country",
      "scale": {"range": ["lightskyblue", "#ef8a62"]},
      "legend": null
    }
  },
}
