{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A radial chart with the option to highlight either the top 3 or bottom 3 countries by population as well as control the year.",
  "width": "container",
  "height": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/jhuy0014/DataVis2Draft/refs/heads/main/data/TopCountriesBirth.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": {
        "input": "select",
        "options": [2010, 2015, 2020],
        "name": "Select Year: "
      }
    },
    {
      "name": "TopOrBottom",
      "value": "Top 3",
      "bind": {
        "input": "select",
        "options": ["Top 3", "Bottom 3"],
        "name": "Highlight: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Population", "order": "descending"}]
    },
    {
      "calculate": "TopOrBottom == 'Top 3' ? datum.rank <= 3 : datum.rank >= (datum['Population'].length)",
      "as": "highlight"
    }
  ],
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},
      "encoding": {
        "tooltip": [
          {"field": "Country", "title": "Country of Birth"},
          {"field": "Population", "title": "Population"}
        ]
      }
    },
    {
      "mark": {"type": "text", "radiusOffset": 35},
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "tooltip": [
          {"field": "Country", "title": "Country of Birth"},
          {"field": "Population", "title": "Population"}
        ]
      }
    }
  ],
  "encoding": {
    "theta": {"field": "Population", "type": "quantitative", "stack": true},
    "radius": {
      "field": "Population",
      "scale": {"type": "linear", "zero": false, "rangeMin": 20}
    },
    "color": {
      "condition": {
        "test": "datum.highlight",
        "field": "Country",
        "scale": {"range": ["blue", "orange"]},
        "legend": null
      },
      "value": "lightgray"
    }
  },
  "config": {}
}
