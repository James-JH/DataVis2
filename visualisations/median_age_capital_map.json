{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jhuy0014/DataVis2Draft/refs/heads/main/data/au-states-topo.json",
        "format": {"type": "topojson", "feature": "austates"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "projection": {"type": "mercator"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jhuy0014/DataVis2Draft/refs/heads/main/data/MedianAgeAndSexRatioByCapitalCity.csv",
        "format": {"type": "csv"}
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"field": "Median age (years)", "type": "quantitative"},
        "color": {
          "field": "Median age (years)",
          "type": "quantitative",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "Capital city", "type": "nominal"},
          {"field": "Median age (years)", "type": "quantitative"},
          {"field": "Sex ratio", "type": "quantitative"}
        ]
      },
      "projection": {"type": "mercator"}
    }
  ]
}
